\begin_layout Subsubsection*
א.
 
\begin_inset Formula $A=\begin{pmatrix}1 & 0 & 0\\
0 & 6 & -1\\
0 & 2 & 3
\end{pmatrix}$
\end_inset

 
\end_layout

\begin_layout Standard

\series bold
תשובה: 
\end_layout

\begin_layout Standard
נכפול את המטריצה ב
\begin_inset Formula $\begin{pmatrix}x_{1}\\
x_{2}\\
x_{3}
\end{pmatrix}$
\end_inset

 ונבדוק מתי מתקיימת מערכת 
\begin_inset Formula 
\[
\begin{cases}
x_{1} & =\lambda x_{1}\\
6x_{2}-x_{3} & =\lambda x_{2}\\
2x_{2}+3x_{3} & =\lambda x_{3}
\end{cases}
\]

\end_inset

 
\end_layout

\begin_layout Standard
נציב את המטריצה במערכת משוואות הומוגנית 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
 & \begin{pmatrix}1-\lambda & 0 & 0\\
0 & 6-\lambda & -1\\
0 & 2 & 3-\lambda
\end{pmatrix}
\end{align*}

\end_inset

נניח 
\begin_inset Formula $6\ne\lambda$
\end_inset

 
\begin_inset Formula 
\begin{align*}
r_{3}-r_{2}\cdot\frac{2}{6-\lambda} & \begin{pmatrix}1-\lambda, & 0, & 0\\
0, & 6-\lambda, & 0\\
0, & 0, & 3-\lambda+\frac{2}{6-\lambda}
\end{pmatrix}\\
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
נחשב את הפתרונות הלא טרוויאלים של מערכת המשוואת נוכל א
\begin_inset Quotes erd
\end_inset

כ לחשב בנפרד 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
1-\lambda & =0\Rightarrow\lambda_{1}=1
\end{align*}

\end_inset

 
\begin_inset Formula 
\begin{align*}
 & 3-\lambda+\frac{2}{6-\lambda}=0\\
\Rightarrow & \left(3-\lambda\right)\left(6-\lambda\right)+2=0\\
= & 18-9\lambda+\lambda^{2}+2=0\\
= & \lambda^{2}-9\lambda+20=0\\
= & \left(\lambda-5\right)\left(\lambda-4\right)=0\\
\Rightarrow & \lambda_{2}=4,\lambda_{3}=5
\end{align*}

\end_inset


\end_layout

